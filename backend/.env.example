# ============================================
# GateKeeper Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=5000

# Frontend URL (for CORS and generating short links)
FRONTEND_URL=http://localhost:5173

# Firebase Admin SDK
# Option 1: Path to service account key JSON file
FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json

# Option 2: Base64 encoded service account (for cloud deployments)
# FIREBASE_SERVICE_ACCOUNT_BASE64=

# Gemini API Key (for URL safety scanning)
GEMINI_API_KEY=your_gemini_api_key_here

# Allowed Origins for CORS (comma-separated for multiple)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
